<div class="row mt-5 justify-content-md-center">
  <div class="col-lg-8 ">
    <div class="card overflow-auto">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <h5 class="card-title">User list</h5>
            <%=
              link_to(
                new_user_path,
                data: { turbo_stream: true }, # makes the link a turbo_stream_request
                class: 'btn btn-link text-decoration-none p-0 border-0'
              ) do
            %>
            <i class="bi bi-person-plus-fill text-primary fs-4"></i>
            <% end %>
       
        </div>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Username</th>
              <th>Position</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody id="user-list">
            <% if @users.any? %>
              <%= render(@users) %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
